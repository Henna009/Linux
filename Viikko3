 from flask import Flask
import mysql.connector

app = Flask(__name__)

@app.route('/')
def home():
    conn = mysql.connector.connect(
        host="localhost",
        user="Nix",
        password="XXXXX",
        database="nix"
    )
    conn.close()
    return "Flask + MySQL connection successful!"

if __name__ == "__main__":
    app.run(host="0.0.0.0", port=5000)
